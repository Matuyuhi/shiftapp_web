                <% shifttxt += year + "/" + month + "/" + day + "," + weekday + "," +kinmu.intime.padStart(5,'0') + "," + kinmu.outtime.padStart(5,'0') + ",@"+kinmu.name + "," + kinmu.comment + "\n" %>
