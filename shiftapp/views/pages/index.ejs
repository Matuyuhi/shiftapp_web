                            <text class="late">
                              <% } else {%>
                              <text>
                                <% } %>
                                <%= year + "/" + month + "/" + day + " " +weekday + " " +shift.intime.padStart(5,'0') + " " +shift.outtime.padStart(5,'0') + " @" +shift.name + " " + shift.comment %><br>
                              </text>
                              <% } %>
                              <% }%>
                              <% } %>
                        </div>
                      </div>
                      <% } %>
                      <% } %>
                      <% } %>
              </div>
            </div>
          </div>
        </div>
      </div>

    </div>
