<% layout('../layout') -%>

<div class="page-header min-vh-75">
  <div class="container">
    <div class="row">
      <div class="col-xl-4 col-lg-5 col-md-6 d-flex flex-column mx-auto">

        <% if (typeof errorMessage === 'undefined') { var errorMessage = []; } %>
        <% if(errorMessage.length != 0){ %>
        <div>
          <strong class="text-gradient text-warning">Warning!</strong>
        </div>
        <div>
          <% for(let item of errorMessage){ %>
          <p class="text-warning"><%= item %></p>
          <% } %>
        </div>
        <% } %>
        <div class="card mt-8">
          <div class="card-header pb-0 text-left bg-transparent">
            <h3 class="font-weight-bolder text-info text-gradient bg-gradient-info">Create Account</h3>
            <p class="mb-0">Enter your username and password to sign up</p>
          </div>
          <div class="card-body">
            <form action="/demo/shift/signup" method="post">
              <label>UserName</label>
              <div class="mb-3">
                <input type="text" class="form-control" placeholder="半角英字のみ" aria-label="UserName" aria-describedby="email-addon" name="username" required />
              </div>
              <label>Password</label>
              <div class="mb-3">
                <input type="password" class="form-control" aria-label="Password" aria-describedby="password-addon" name="password" pattern="^[A-Za-z0-9]+$" placeholder="半角英数" required />
              </div>
              <label>Repeat Password</label>
              <div class="mb-3">
                <input type="password" class="form-control" aria-label="RepeatPassword" aria-describedby="password-addon" name="repassword" pattern="^[A-Za-z0-9]+$" placeholder="半角英数" required />
              </div>
              <!-- <div class="form-check form-switch">
                    <input class="form-check-input" type="checkbox" id="rememberMe" checked="">
                    <label class="form-check-label" for="rememberMe">Remember me</label>
                  </div> -->
              <div class="text-center">
                <input type="submit" class="btn bg-gradient-info w-100 mt-4 mb-0" value="Sign up">
              </div>
            </form>
          </div>
          <!-- <div class="card-footer text-center pt-0 px-lg-2 px-1">
                <p class="mb-4 text-sm mx-auto">
                  Don't have an account?
                  <a href="/signup" class="text-info text-gradient font-weight-bold">Sign up</a>
                </p>
              </div> -->
        </div>
      </div>
    </div>
  </div>
</div>
